<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="RMRestAPI">
    <Properties>
        <Property name="filename">C:/Logs/RMRestApi</Property>
    </Properties>
    <Appenders>
        <RollingFile
                name="File"
                fileName="${filename}.log"
                filePattern="${filename}_%i.log" >
            <Policies><SizeBasedTriggeringPolicy size="10 MB" /></Policies>
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %C.%M:%L - %msg%n"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace" additivity="false">
            <AppenderRef ref="File"/>
        </Root>
        <Logger name="nl.novadoc.rm.rest.archive.RMRestModule" level="debug" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
        <!-- Logger name="nl.novadoc.rm.rest.utils.IERUtils" level="error" additivity="false">
            <AppenderRef ref="File"/>
        </Logger-->
        <Logger name="nl.novadoc.rm.rest.Config" level="error" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
